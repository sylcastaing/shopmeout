extends ../layout

block scripts-header
	script(src="/javascripts/users/userSignIn.js")
block content
	form
		div(class="form-group")
			label(for="login") Login
			input(type="email",class="form-control", id="email", placeholder="Entrez votre Email", ng-model="vm.user.email")
		div(class="form-group")
			label(for="password") Mot de passe
			input(type="password", class="form-control", id="password", placeholder="Entrez votre Mot de passe", ng-model="vm.user.password")
		button(type="submit", class="btn btn-default", ng-model="vm.submit(vm.user)") Connexion