div(class="modal fade" id="bookNeedShopModal" role="dialog")
	div(class="modal-dialog")

		// Modal content
		div.modal-content(ng-if="selectedDemande")
			div(class="modal-header")
				button(type="button" class="close" data-dismiss="modal") &times;
				h4(class="modal-title") Réalise ce shopping !
			div(class="modal-body")
				div
					p Shopping demandé par {{selectedDemande.prenom}} {{selectedDemande.nom | firstLetter}}. le {{selectedDemande.date | date:"dd/MM/yyyy"}}
				include ../needShop/listArticles.jade

			div(class="modal-footer")
				button(type="button" class="btn btn-default" data-dismiss="modal") Fermer