div(class="modal fade" id="needShopModal" role="dialog" ng-controller="NeedShopCtrl")
	div(class="modal-dialog")

		// Modal content
		div(class="modal-content")
			div(class="modal-header")
				button(type="button" class="close" data-dismiss="modal") &times;
				h4(class="modal-title") Demander un shopping
			div(class="modal-body")
				div(class="row centered-form")
					div.panel-body
						span(class="alert alert-success col-xs-12", ng-show="needShop.$error.validate") La demande de shopping a bien été ajouté !
						span(class="alert alert-info col-xs-12") Magasin Sélectionné : {{selectedMagasin}}, {{adresseSelectedMagasin}}
						form(name="needShop", method="post", ng-submit="addNeedShop()" novalidate)
							div.form-group
								div.row
									label(class="control-label col-xs-12" id="labelNbArticles") J'ai besoin de :
								div.row
									div(class="btn-group col-xs-12" data-toggle="buttons-radio") 
										button(type="button" class="btn btn-primary" ng-model="data.nbArticle" value='0' buttons-radio="" ng-click="removeErrorNbArticle()") Moins de 5 produits
										button(type="button" class="btn btn-primary" ng-model="data.nbArticle" value='1' buttons-radio="" ng-click="removeErrorNbArticle()") Jusqu'à 10 produits
										button(type="button" class="btn btn-primary" ng-model="data.nbArticle" value='2' buttons-radio="" ng-click="removeErrorNbArticle()") Plus de 10 produits
										span(style="color:red", ng-show="needShop.$error.NbArticleError") le nombre d'article est obligatoire.
							div.form-group
								div.row
									label(class="control-label col-xs-12" id="labelAdresse") Mon adresse de livraison :
								div.row
									div(class="col-xs-12")
										input(class="form-control input-sm", type="text", name="adresse", placeholder="Votre adresse de livraison", ng-model="adresse" required)
										span(style="color:red", ng-show="needShop.adresse.$invalid || needShop.$error.adresse") L'adresse est obligatoire.
							div.form-group
								div.row
									label(class="control-label col-xs-12 align-center" id="labelDate") Date du shopping :
								div.row
									div(class="col-xs-12")
										input(class="form-control input-sm", type="date", name="dateShopping", placeholder="Date du Shopping", ng-model="data.dateShopping" ng-model-options="{timezone:'-0000'}" required)
										span(style="color:red", ng-show="needShop.$error.dateShopping") La date du shopping est obligatoire.
								br
								div(class="alert alert-danger", ng-show="needShop.$error.addNeedShop")
									span(style="color:red" ) {{needShop.$error.message}}
								div.actions
									input(type="submit", value="Ajouter", class="btn btn-info btn-block")
								br
			div(class="modal-footer")
				button(type="button" class="btn btn-default" data-dismiss="modal") Close
